<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

<!--по умолчанию вызывается конструктор по умолчанию-->
<!--    можно устанавливать index="0.." чтобы указать порядок параметров-->
    <bean id="pool1" name="p1,p2,p3"  class="ru.egartech.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" ref="driver"/>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="10"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties" type="java.util.Map">
            <map>
                <entry key="url" value-ref="driver"/>
                <entry key="password" value="123"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="companyRepository" class="ru.egartech.database.repository.CompanyRepository">
        <constructor-arg ref="pool1"/>
    </bean>

</beans>